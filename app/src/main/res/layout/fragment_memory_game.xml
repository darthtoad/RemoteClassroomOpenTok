<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.epicodus.samuelgespass.remoteclassroomopentok.ui.MemoryGameFragment">

    <!-- TODO: Update blank fragment layout -->


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:isScrollContainer="true">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/title"
                    android:textSize="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="Please Match the Words to the Picture"
                    />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageListView"
                    android:layout_below="@+id/title"
                    android:orientation="vertical"
                    android:isScrollContainer="true"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="20dp"
                    >

                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/wordListView"
                    android:layout_below="@+id/title"
                    android:layout_toRightOf="@+id/imageListView"
                    android:orientation="vertical"
                    android:isScrollContainer="true"
                    >

                </LinearLayout>

        </RelativeLayout>

</ScrollView>
