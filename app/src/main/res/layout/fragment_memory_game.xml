<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.epicodus.samuelgespass.remoteclassroomopentok.ui.MemoryGameFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView-running"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:background="@color/colorAccent"
            android:text=""
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView-sleeping" />

        <TextView
            android:id="@+id/textView-sleeping"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:background="#BAD"
            android:textAlignment="center"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView-eating"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:textSize="40sp"
            android:textAlignment="center"
            android:background="#867530"
            android:textColor="#035768"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView-running" />

        <Image


    </android.support.constraint.ConstraintLayout>

</FrameLayout>
